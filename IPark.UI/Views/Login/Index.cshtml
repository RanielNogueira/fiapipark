
@{
    ViewData["Title"] = "Index";
    Layout = null;
}

    <html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>IPark | @ViewBag.Title</title>
        <link href="~/css/login.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" />
    </head>
    <body ng-app="app" ng-controller="loginController" ng-cloak>
        <div class="container-fluid">
            <div class="row no-gutter">
                <div class="d-none d-md-flex col-md-4 col-lg-6 bg-image"></div>
                <div class="col-md-8 col-lg-6">
                    <div class="login d-flex align-items-center py-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-9 col-lg-8 mx-auto">
                                    <h3 class="login-heading mb-4 text-center"><i class="fa fa-parking fa-4x rotate-n-15"></i></h3>
                                    <h3 class="login-heading mb-4 text-center">Seja bem vindo!</h3>
                                    <form name="formLogin" ng-submit="auth(usuario)">
                                        <div class="form-label-group">
                                            <input type="email" name="email" ng-model="usuario.email" id="inputEmail" class="form-control" placeholder="E-mail de login" required autofocus>
                                            <label for="inputEmail">E-email</label>

                                        </div>

                                        <div class="form-row mb-2 justify-content-center">
                                            <span class="badge badge-danger" style="margin">admin@ipark.com.br</span>
                                        </div>

                                        <div class="form-label-group">
                                            <input type="password" name="senha" ng-model="usuario.senha" id="inputPassword" class="form-control" placeholder="Senha" required>
                                            <label for="inputPassword">Senha</label>

                                        </div>
                                        <div class="form-row mb-2 justify-content-center">
                                            <span class="badge badge-danger" style="margin">fiap123</span>
                                        </div>

                                        <div class="custom-control custom-checkbox mb-3">
                                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                                            <label class="custom-control-label" for="customCheck1"> Lembrar senha</label>
                                        </div>
                                        <button ng-disabled="loading" class="btn btn-lg btn-primary btn-block btn-login text-uppercase font-weight-bold mb-2" type="submit">
                                            <i ng-class="!loading ? 'fas fa-unlock' : 'fas fa-spinner fa-spin'"></i> {{(!loading ? 'ENTRAR' : 'AGUARDE...')}}
                                        </button>
                                        <div class="text-center">
                                            <a class="small" href="#"> Esqueceu a senha?</a>
                                        </div>
                                        <div class="text-center mt-1" ng-show="errorLogin">
                                            <label class="alert alert-warning"><i class="fas fa-exclamation-circle"></i> E-mail / Senha incorretos.</label>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.slim.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/js/all.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
        <script src="~/lib/angular/angular.js"></script>
        <script src="~/app/app.js"></script>
        <script src="~/app/controller/login.controller.js"></script>
    </body>
    </html>